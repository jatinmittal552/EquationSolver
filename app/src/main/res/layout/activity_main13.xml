<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121111">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity13"
        android:padding="10sp">
        <TextView
            android:id="@+id/c401"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Formula:"
            android:textColor="#FAF9F9"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />
        <ImageView
            android:id="@+id/c402"
            android:layout_width="wrap_content"
            android:layout_height="209sp"
            android:background="#050505"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.388"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/c401"
            app:layout_constraintVertical_bias="0"
            app:srcCompat="@drawable/relativistic_momentum" />
        <TextView
            android:id="@+id/c403"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="where m is mass, v is velocity and c is speed of light"
            android:textColor="#F8F6F6"
            android:textColorHint="#5E5E5E"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/c402"
            app:layout_constraintVertical_bias="0.0" />
        <TextView
            android:id="@+id/c404"
            android:layout_width="wrap_content"
            android:layout_height="39sp"
            android:background="#3F51B5"
            android:fontFamily="sans-serif-black"
            android:gravity="center|left"
            android:text="   Calculate relativistic momentum "
            android:textColor="#EFEBEB"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/c403"
            app:layout_constraintVertical_bias="0.171"/>
        <TextView
            android:id="@+id/c405"
            android:layout_width="35sp"
            android:layout_height="wrap_content"
            android:background="#D1CECE"
            android:text="m"
            android:textSize="24sp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.259"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/c404"
            app:layout_constraintVertical_bias="0.152" />

        <TextView
            android:id="@+id/c406"
            android:layout_width="20sp"
            android:layout_height="34sp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text=":"
            android:textColor="#F8F5F5"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.08"
            app:layout_constraintStart_toEndOf="@+id/c405"
            app:layout_constraintTop_toBottomOf="@+id/c404"
            app:layout_constraintVertical_bias="0.148" />

        <EditText
            android:id="@+id/c407"
            android:layout_width="130sp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="bottom"
            android:hint="Enter value"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:textColor="#FBF8F8"
            android:textColorHint="#B5B1B1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintStart_toEndOf="@+id/c406"
            app:layout_constraintTop_toBottomOf="@+id/c404"
            app:layout_constraintVertical_bias="0.118" />
        <TextView
            android:id="@+id/c408"
            android:layout_width="35sp"
            android:layout_height="wrap_content"
            android:background="#D1CECE"
            android:text="v"
            android:textSize="24sp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.259"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/c405"
            app:layout_constraintVertical_bias="0.08" />
        <TextView
            android:id="@+id/c409"
            android:layout_width="20sp"
            android:layout_height="34sp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text=":"
            android:textColor="#F8F5F5"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.08"
            app:layout_constraintStart_toEndOf="@+id/c408"
            app:layout_constraintTop_toBottomOf="@+id/c406"
            app:layout_constraintVertical_bias="0.08" />

        <EditText
            android:id="@+id/c410"
            android:layout_width="130sp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="bottom"
            android:hint="Enter value"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:textColor="#FBF8F8"
            android:textColorHint="#B5B1B1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintStart_toEndOf="@+id/c409"
            app:layout_constraintTop_toBottomOf="@+id/c407"
            app:layout_constraintVertical_bias="0.015" />

        <TextView
            android:id="@+id/c411"
            android:layout_width="35sp"
            android:layout_height="wrap_content"
            android:background="#DAD4D4"
            android:text="c"
            android:textSize="24sp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.259"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/c408"
            app:layout_constraintVertical_bias="0.091" />

        <TextView
            android:id="@+id/c412"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text=":"
            android:textColor="#FAF6F6"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.08"
            app:layout_constraintStart_toEndOf="@+id/c411"
            app:layout_constraintTop_toBottomOf="@+id/c409"
            app:layout_constraintVertical_bias="0.091" />

        <ImageView
            android:id="@+id/c413"
            android:layout_width="130sp"
            android:layout_height="wrap_content"
            android:background="#FFFDFD"
            android:foregroundGravity="bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.36"
            app:layout_constraintStart_toEndOf="@+id/c412"
            app:layout_constraintTop_toBottomOf="@+id/c410"
            app:layout_constraintVertical_bias="0.057"
            app:srcCompat="@drawable/light_value" />

        <TextView
            android:id="@+id/c414"
            android:layout_width="35sp"
            android:layout_height="wrap_content"
            android:text="p"
            android:textSize="24sp"
            android:background="#DAD4D4"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.259"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/c411"
            app:layout_constraintVertical_bias="0.179"/>

        <TextView
            android:id="@+id/c415"
            android:layout_width="30sp"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:text="="
            android:textColor="#B1AEAE"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/c414"
            app:layout_constraintTop_toBottomOf="@+id/c412"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.172"
            app:layout_constraintHorizontal_bias="0.09"/>

        <TextView
            android:id="@+id/c416"
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:background="#878282"
            android:hint="Click sumbit"
            android:text="click submit"
            android:textColorHint="#101010"
            android:textSize="22sp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.19"
            app:layout_constraintStart_toEndOf="@+id/c415"
            app:layout_constraintTop_toBottomOf="@+id/c413"
            app:layout_constraintVertical_bias="0.173" />

        <Button
            android:id="@+id/c417"
            android:layout_width="130sp"
            android:layout_height="wrap_content"
            android:background="#ED2A2A"
            android:fontFamily="sans-serif-black"
            android:onClick="relativistic_momemtum"
            android:text="Submit"
            android:textColor="#F8F2F1"
            android:textSize="20sp"
            android:layout_marginTop="40sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.451"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/c415"
            app:layout_constraintVertical_bias="0.94" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>