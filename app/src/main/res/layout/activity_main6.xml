<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121111">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity6"
        android:padding="10sp">
        <TextView
            android:id="@+id/c301"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Formula:"
            android:textColor="#FAF9F9"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />
        <ImageView
            android:id="@+id/c302"
            android:layout_width="150sp"
            android:layout_height="90sp"
            android:background="#050505"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.388"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/c301"
            app:layout_constraintVertical_bias="0"
            app:srcCompat="@drawable/relative_velocity" />
        <ImageView
            android:id="@+id/c303"
            android:layout_width="wrap_content"
            android:layout_height="130sp"
            android:background="#050505"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.388"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/c302"
            app:layout_constraintVertical_bias="0.005"
            app:srcCompat="@drawable/relative_velocity1" />
        <TextView
            android:id="@+id/c304"
            android:layout_width="wrap_content"
            android:layout_height="39sp"
            android:background="#3F51B5"
            android:fontFamily="sans-serif-black"
            android:gravity="center|left"
            android:text=" Calculate relative velocity "
            android:textColor="#EFEBEB"
            android:textSize="23sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/c303"
            app:layout_constraintVertical_bias="0.171"/>
        <TextView
            android:id="@+id/c305"
            android:layout_width="35sp"
            android:layout_height="wrap_content"
            android:background="#D1CECE"
            android:text="u"
            android:textSize="24sp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.259"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/c304"
            app:layout_constraintVertical_bias="0.152" />

        <TextView
            android:id="@+id/c306"
            android:layout_width="20sp"
            android:layout_height="34sp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text=":"
            android:textColor="#F8F5F5"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.08"
            app:layout_constraintStart_toEndOf="@+id/c305"
            app:layout_constraintTop_toBottomOf="@+id/c304"
            app:layout_constraintVertical_bias="0.148" />

        <EditText
            android:id="@+id/c307"
            android:layout_width="130sp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="bottom"
            android:hint="Enter value"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:textColor="#FBF8F8"
            android:textColorHint="#B5B1B1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintStart_toEndOf="@+id/c306"
            app:layout_constraintTop_toBottomOf="@+id/c304"
            app:layout_constraintVertical_bias="0.13" />
        <TextView
            android:id="@+id/c308"
            android:layout_width="35sp"
            android:layout_height="wrap_content"
            android:background="#D1CECE"
            android:text="v"
            android:textSize="24sp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.259"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/c305"
            app:layout_constraintVertical_bias="0.118" />
        <TextView
            android:id="@+id/c309"
            android:layout_width="20sp"
            android:layout_height="34sp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text=":"
            android:textColor="#F8F5F5"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.08"
            app:layout_constraintStart_toEndOf="@+id/c308"
            app:layout_constraintTop_toBottomOf="@+id/c306"
            app:layout_constraintVertical_bias="0.102" />

        <EditText
            android:id="@+id/c310"
            android:layout_width="130sp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="bottom"
            android:hint="Enter value"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:textColor="#FBF8F8"
            android:textColorHint="#B5B1B1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintStart_toEndOf="@+id/c309"
            app:layout_constraintTop_toBottomOf="@+id/c307"
            app:layout_constraintVertical_bias="0.036" />

        <TextView
            android:id="@+id/c311"
            android:layout_width="35sp"
            android:layout_height="wrap_content"
            android:background="#DAD4D4"
            android:text="c"
            android:textSize="24sp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.259"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/c308"
            app:layout_constraintVertical_bias="0.091" />

        <TextView
            android:id="@+id/c312"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text=":"
            android:textColor="#FAF6F6"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.08"
            app:layout_constraintStart_toEndOf="@+id/c311"
            app:layout_constraintTop_toBottomOf="@+id/c309"
            app:layout_constraintVertical_bias="0.091" />

        <ImageView
            android:id="@+id/c313"
            android:layout_width="130sp"
            android:layout_height="wrap_content"
            android:background="#FFFDFD"
            android:foregroundGravity="bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.35"
            app:layout_constraintStart_toEndOf="@+id/c312"
            app:layout_constraintTop_toBottomOf="@+id/c310"
            app:layout_constraintVertical_bias="0.059"
            app:srcCompat="@drawable/light_value" />

        <TextView
            android:id="@+id/c314"
            android:layout_width="35sp"
            android:layout_height="wrap_content"
            android:text="u'"
            android:textSize="24sp"
            android:background="#DAD4D4"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.259"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/c311"
            app:layout_constraintVertical_bias="0.179"/>

        <TextView
            android:id="@+id/c315"
            android:layout_width="30sp"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:text="="
            android:textColor="#B1AEAE"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/c314"
            app:layout_constraintTop_toBottomOf="@+id/c312"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.172"
            app:layout_constraintHorizontal_bias="0.09"/>

        <TextView
            android:id="@+id/c316"
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:background="#878282"
            android:hint="Click sumbit"
            android:text="click submit"
            android:textColorHint="#101010"
            android:textSize="22sp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.19"
            app:layout_constraintStart_toEndOf="@+id/c315"
            app:layout_constraintTop_toBottomOf="@+id/c313"
            app:layout_constraintVertical_bias="0.173" />

        <Button
            android:id="@+id/c317"
            android:layout_width="130sp"
            android:layout_height="wrap_content"
            android:background="#ED2A2A"
            android:fontFamily="sans-serif-black"
            android:onClick="velocity"
            android:text="Submit"
            android:textColor="#F8F2F1"
            android:textSize="20sp"
            android:layout_marginTop="40sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.451"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/c315"
            app:layout_constraintVertical_bias="0.94" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>